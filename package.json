{
	"name": "@daviddios/xtrpc",
	"description": "Export your tRPC router to massively improve language server performance and/or let your users consume your API from a typed SDK",
	"version": "1.1.0",
	"license": "MIT",
	"author": {
		"name": "David Dios",
		"email": "dios.david@thedevcore.net"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/dios-david/xtrpc.git"
	},
	"keywords": [
		"trpc",
		"api",
		"sdk",
		"typescript"
	],
	"type": "module",
	"bin": {
		"xtrpc": "dist/cli.mjs"
	},
	"exports": {
		".": {
			"require": {
				"types": "./dist/xtrpc.d.cts",
				"default": "./dist/xtrpc.cjs"
			},
			"import": {
				"types": "./dist/xtrpc.d.mts",
				"default": "./dist/xtrpc.mjs"
			}
		}
	},
	"scripts": {
		"typecheck": "tsc --noEmit",
		"build": "tsdown src/cli.ts src/xtrpc.ts && pnpm generate:schema",
		"generate:schema": "tsx scripts/generate-json-schema.ts",
		"test": "NODE_ENV=test tsx --test test/**/*.spec.ts",
		"lint": "biome check .",
		"lint:ci": "biome ci --reporter=github",
		"lint:fix": "biome check . --write",
		"release": ""
	},
	"dependencies": {
		"arktype": "2.1.28",
		"ts-morph": "27.0.2"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@trpc/server": "11.8.0",
		"@types/node": "24.10.3",
		"tsdown": "^0.17.4",
		"tsx": "4.21.0",
		"typescript": "5.9.3",
		"zod": "4.1.13",
		"zod3": "npm:zod@3.25.76"
	}
}
